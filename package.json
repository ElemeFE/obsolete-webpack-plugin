{
  "private": true,
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap",
    "build": "cd packages/obsolete-web && rollup --config build/rollup.config.js",
    "build:cjs": "cd packages/obsolete-web && babel --out-dir cjs src",
    "build:esm": "cd packages/obsolete-web && babel --out-dir esm src",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "clean": "rm -rf packages/*/{dist,cjs,esm}",
    "clean:all": "npm run clean && rm -rf node_modules packages/*/node_modules",
    "prepublishOnly": "npm run clean:all && npm run bootstrap && npm run lint && npm test && npm run build && npm run build:cjs && npm run build:esm"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-transform-property-mutators": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/runtime-corejs2": "^7.1.5",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.8.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-uglify": "^6.0.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
